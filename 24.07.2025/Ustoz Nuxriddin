def nxt(p):
    p = list(p)
    i = len(p) - 2
    while i >= 0 and p[i] >= p[i + 1]:
        i -= 1
    if i == -1:
        return None
    j = len(p) - 1
    while p[j] <= p[i]:
        j -= 1
    p[i], p[j] = p[j], p[i]
    p[i+1:] = reversed(p[i+1:])
    return p

s, k = input().split()
k = int(k)
p = list(s)

res = []
for _ in range(k):
    p = nxt(p)
    if p is None:
        print(-1)
        break
    if ''.join(p) > s:
        res = p
else:
    print(''.join(res) if res else -1)
